@model VegeStore.Web.ViewModels.Administration.Items.AdminItemsViewModel
@{
    ViewData["Title"] = "Items";
}
<div class="completedContainer nav nav-pills" style="margin:2em;padding:1em; display:flex; justify-content:center;">
    <a asp-area="Administration" asp-controller="Items" asp-action="DeletedItems" class="nav-link active" style="background-color:#82ae46; border-radius:30px;">See Deleted Items</a>
</div>
<div class="row" style="margin:3em;">
    @foreach (var item in this.Model.Items)
    {
        <div class="col-md-6 col-lg-3 ftco-animate @item.Type item">
            <div class="product">
                <img class="img-fluid" src="@item.ThumbnailUrl" alt="Colorlib Template">
                <div class="overlay"></div>
                <div class="text py-3 pb-4 px-3 text-center">
                    <h3><a href="#">@item.Name</a></h3>
                    <div class="d-flex">
                        <div class="pricing">
                            <p class="price"><span>$@item.Price.ToString("F2")</span></p>
                        </div>
                    </div>
                    <div class="bottom-area d-flex px-3">
                        <div class="m-auto d-flex">
                            <a asp-area="Administration" asp-controller="Items" asp-action="EditItem" asp-route-itemId="@item.Id" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                <span><i class="ion-ios-create"></i></span>
                            </a>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1-@item.Id">
                                <span><i class="ion-ios-trash"></i></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal1-@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Do you want to delete @item.Name?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <a asp-area="Administration" asp-controller="Items" asp-action="DeleteItem" asp-route-itemId="@item.Id" class="btn btn-danger heart d-flex justify-content-center align-items-center ">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="row" style="margin:3rem; display:flex; justify-content:center; font-size:5rem;">
    <a asp-area="Administration" asp-controller="Items" asp-action="CreateItem" class="buy-now d-flex justify-content-center align-items-center mx-1">
        <span><i class="ion-ios-add-circle"></i></span>
    </a>
</div>