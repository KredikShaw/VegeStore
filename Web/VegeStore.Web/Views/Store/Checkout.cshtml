
@{
    ViewData["Title"] = "Checkout";
}
@model VegeStore.Web.ViewModels.Checkout.CheckoutViewModel

<div class="hero-wrap hero-bread" style="background-image: url('/images/bg_1.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Checkout</span></p>
                <h1 class="mb-0 bread">Checkout</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 ftco-animate">
                <form method="post" class="billing-form" id="detailsForm">
                    <h3 class="mb-4 billing-heading">Billing Details</h3>
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="InputModel.FirstName">First Name</label>
                                <input type="text" class="form-control" asp-for="InputModel.FirstName" name="firstName" placeholder="">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="InputModel.LastName">Last Name</label>
                                <input type="text" class="form-control" asp-for="InputModel.LastName" name="lastName" placeholder="">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="InputModel.Neighbourhood">Neighbourhood</label>
                                <input type="text" class="form-control" asp-for="InputModel.Neighbourhood" name="neighbourhood" placeholder="Sofia neighbourhood name">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="InputModel.Street">Street Address</label>
                                <input type="text" class="form-control" asp-for="InputModel.Street" name="street" placeholder="House number and street name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="InputModel.Appartment">Appartment (optional)</label>
                                <input type="text" class="form-control" asp-for="InputModel.Appartment" name="appartment" placeholder="Appartment, suite, unit etc: (optional)">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="InputModel.Zip">Postcode / ZIP</label>
                                <input type="text" class="form-control" asp-for="InputModel.Zip" name="zip" placeholder="">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="InputModel.Phone">Phone</label>
                                <input type="text" class="form-control" asp-for="InputModel.Phone" name="phone" placeholder="">
                            </div>
                        </div>
                        <div class="w-100"></div>
                    </div>
                </form><!-- END -->
            </div>
            <div class="col-xl-5">
                <div class="row mt-5 pt-3">
                    <div class="col-md-12 d-flex mb-5">
                        <div class="cart-detail cart-total p-3 p-md-4">
                            <h3 class="billing-heading mb-4">Cart Total</h3>
                            <p class="d-flex">
                                <span>Subtotal</span>
                                @if (@Model.TotalCost - 5 >= 50 || Model.ItemsCount == 0)
                                {
                                    <span>$@(Model.TotalCost)</span>
                                }
                                else
                                {
                                    <span>$@(Model.TotalCost-5)</span>
                                }
                            </p>
                            <p class="d-flex">
                                <span>Delivery</span>
                                @if (Model.TotalCost - 5 >= 50 || Model.ItemsCount == 0)
                                {
                                    <span>$0.00</span>
                                }
                                else
                                {
                                    <span>$5.00</span>
                                }
                            </p>
                            <p class="d-flex">
                                <span>Discount</span>
                                <span>$@Model.Discount.ToString("F2")</span>
                            </p>
                            <hr>
                            <p class="d-flex total-price">
                                <span>Total</span>
                                <span>$@((Model.TotalCost-Model.Discount).ToString("F2"))</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="cart-detail p-3 p-md-4">
                            <p><button form="detailsForm" class="btn btn-primary py-3 px-4">Place an order</button></p>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->

<section class="ftco-section ftco-no-pt ftco-no-pb py-5 bg-light">
    <div class="container py-4">
        <div class="row d-flex justify-content-center py-5">
            <div class="col-md-6">
                <h2 style="font-size: 22px;" class="mb-0">Subcribe to our Newsletter</h2>
                <span>Get e-mail updates about our latest shops and special offers</span>
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <form action="#" class="subscribe-form">
                    <div class="form-group d-flex">
                        <input type="text" class="form-control" placeholder="Enter email address">
                        <input type="submit" value="Subscribe" class="submit px-3">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>