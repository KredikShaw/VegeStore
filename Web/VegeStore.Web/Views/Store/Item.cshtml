
@{
    ViewData["Title"] = "Item";
}
@model VegeStore.Web.ViewModels.Shop.ItemViewModel

<div class="hero-wrap hero-bread" style="background-image: url('/images/bg_1.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home</a></span> <span class="mr-2"><a asp-controller="Store" asp-action="Shop">Shop</a></span> <span>Product Single</span></p>
                <h1 class="mb-0 bread">Product Single</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 ftco-animate">
                <a href="@Model.Item.ThumbnailUrl" class="image-popup"><img src="@Model.Item.ThumbnailUrl" class="img-fluid" alt="Colorlib Template"></a>
            </div>
            <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                <h3>@Model.Item.Name</h3>
                <div class="rating d-flex">
                    <p class="text-left mr-4">
                        <a href="#" class="mr-2">@Model.Item.Rating.ToString("F1")</a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                    </p>
                    <p class="text-left mr-4">
                        <a href="#" class="mr-2" style="color: #000;">@Model.Item.RatedAmount <span style="color: #bbb;">Rated</span></a>
                    </p>
                    <p class="text-left">
                        <a href="#" class="mr-2" style="color: #000;">@Model.Item.Sold <span style="color: #bbb;">Sold</span></a>
                    </p>
                </div>
                <p class="price"><span>$@Model.Item.Price.ToString("F2")</span></p>
                <p>
                    @Model.Item.Description
                </p>
                <form method="post" asp-action="AddToCart">
                    <div class="row mt-4">
                        <div class="w-100"></div>
                        <div class="input-group col-md-6 d-flex mb-3">
                            <span class="input-group-btn mr-2">
                                <button type="button" class="quantity-left-minus btn" data-type="minus" data-field="">
                                    <i class="ion-ios-remove"></i>
                                </button>
                            </span>
                            <input type="text" oninput="Check(this.value)" id="amount" name="amount" class="form-control input-number" value="1">
                            <span class="input-group-btn ml-2">
                                <button type="button" class="quantity-right-plus btn" data-type="plus" data-field="">
                                    <i class="ion-ios-add"></i>
                                </button>
                            </span>
                            <label style="display:none; color:red;"; id="amountLabel" for="amount">Can't order more than @Model.Item.Available</label>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <p style="color: #000;">@Model.Item.Available kg available</p>
                        </div>
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="itemId" name="itemId" value="@Model.Item.Id">
                        </div>
                    </div>
                    <p><input type="submit" class="btn btn-black py-3 px-5" id="submitButton" value="Add to Cart" /></p>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
